{
  "name": "react-playground",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:tommarien/react-playground.git",
  "author": "Tom Marien <tommarien@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "14.15.3",
    "yarn": "1.x"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@types/classnames": "^2.2.11",
    "@types/jest": "^26.0.19",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "core-js": "^3.8.1",
    "css-loader": "^5.0.1",
    "eslint": "^7.16.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.3",
    "mini-css-extract-plugin": "^1.3.3",
    "nock": "^13.0.5",
    "node-sass": "^5.0.0",
    "prettier": "^2.2.1",
    "react-refresh": "^0.9.0",
    "rifraf": "^2.0.3",
    "sass-loader": "^10.1.0",
    "typescript": "^4.1.3",
    "webpack": "^4.44.2",
    "webpack-bundle-analyzer": "^4.3.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "scripts": {
    "analyze": "webpack-bundle-analyzer dist/stats.json",
    "build": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "clean": "rimraf dist",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./",
    "lint:types": "tsc --noEmit --pretty",
    "serve": "webpack-dev-server --open",
    "test": "jest"
  },
  "dependencies": {
    "@babel/runtime": "^7.12.5",
    "bootstrap-scss": "^4.5.3",
    "classnames": "^2.2.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": "eslint"
  },
  "jest": {
    "verbose": false,
    "moduleNameMapper": {
      "\\.((sa|sc|c)ss)$": "<rootDir>/src/__mocks__/styleMock.js"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testURL": "http://localhost",
    "testPathIgnorePatterns": [
      "dist"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)?$": "babel-jest",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>src/__mocks__/fileTransformer.js"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
